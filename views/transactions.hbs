<div class="page">
  <div class="page-header">
    <div class="page-header-left">
      <div class="page-title">
        {{title}}
      </div>
    </div>

    <div class="page-header-right">
      <a href="/transactions/create" class="btn btn-success">+ Cr√©er une nouvelle transaction</a>
    </div>
  </div>
  <div class="page-layout">
    <div class="card">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th class="text-center">EMETTEUR</th>
            <th class="text-end">MONTANT</th>
            <th class="text-center">BENEFICIAIRE</th>
            <th class="text-end">DATE DE CREATION</th>
            <th class="text-end">DATE DE VALIDATION</th>
          </tr>
        </thead>
        <tbody>
          {{#each transactions}}
          <tr>
            <td>{{this.id}}</td>
            <td class="text-center">{{this.sender}}</td>
            <td class="text-end">{{this.amount}}</td>
            <td class="text-center">{{this.receiver}}</td>
            <td class="text-end">{{this.initiatedAt}}</td>
            <td class="text-end">
              {{#if this.validated}}
              {{this.validatedAt}}
              {{else}}
              <div class="d-grid gap-2">
              <a href="/transactions/qrcode/{{this.id}}" class="btn btn-outline-success">Valider</a>
            </div>
              {{/if}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
